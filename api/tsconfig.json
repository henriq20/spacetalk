{
    "compilerOptions": {
		"outDir": "./dist",
        "module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
    },
	"include": [
		"./src/**/*",
		"./tests/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
